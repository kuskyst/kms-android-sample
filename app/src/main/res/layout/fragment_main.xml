<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <TextView
        android:id="@+id/tv_encrypt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Encrypt:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_encrypt"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="encrypt"
        app:layout_constraintStart_toStartOf="@+id/tv_encrypt"
        app:layout_constraintEnd_toEndOf="@+id/tv_encrypt"
        app:layout_constraintTop_toBottomOf="@+id/tv_encrypt" />

    <Button
        android:id="@+id/bt_encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="encrypt"
        app:layout_constraintStart_toStartOf="@+id/et_encrypt"
        app:layout_constraintEnd_toEndOf="@+id/et_encrypt"
        app:layout_constraintTop_toBottomOf="@+id/et_encrypt" />

    <TextView
        android:id="@+id/tv_encrypt_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Encrypt Result:"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/et_encrypt"
        app:layout_constraintEnd_toEndOf="@+id/et_encrypt"
        app:layout_constraintTop_toBottomOf="@+id/bt_encrypt" />

    <EditText
        android:id="@+id/et_encrypt_result"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="encrypt-result"
        app:layout_constraintStart_toStartOf="@+id/tv_encrypt_result"
        app:layout_constraintEnd_toEndOf="@+id/tv_encrypt_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_encrypt_result" />

    <TextView
        android:id="@+id/tv_decrypt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Decrypt:"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/et_encrypt_result"
        app:layout_constraintEnd_toEndOf="@+id/et_encrypt_result"
        app:layout_constraintTop_toBottomOf="@+id/et_encrypt_result" />

    <EditText
        android:id="@+id/et_decrypt"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="decrypt"
        app:layout_constraintStart_toStartOf="@+id/tv_decrypt"
        app:layout_constraintEnd_toEndOf="@+id/tv_decrypt"
        app:layout_constraintTop_toBottomOf="@+id/tv_decrypt" />

    <Button
        android:id="@+id/bt_decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="decrypt"
        app:layout_constraintStart_toStartOf="@+id/et_decrypt"
        app:layout_constraintEnd_toEndOf="@+id/et_decrypt"
        app:layout_constraintTop_toBottomOf="@+id/et_decrypt" />

    <TextView
        android:id="@+id/tv_decrypt_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Decrypt Result:"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/et_decrypt"
        app:layout_constraintEnd_toEndOf="@+id/et_decrypt"
        app:layout_constraintTop_toBottomOf="@+id/bt_decrypt" />

    <EditText
        android:id="@+id/et_decrypt_result"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="decrypt-result"
        app:layout_constraintStart_toStartOf="@+id/tv_decrypt_result"
        app:layout_constraintEnd_toEndOf="@+id/tv_decrypt_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_decrypt_result" />

</androidx.constraintlayout.widget.ConstraintLayout>